# name the compiler
CPP = wpp386
CC = wcc386
WL = wlib
ASM = JWasm

OBJETS1	=	POLY.OBJ	POLYCLIP.OBJ	POLYDISC.OBJ	POLYFLAT.OBJ	&
		POLYGOUR.OBJ	POLYGTEX.OBJ	POLYLINE.OBJ	POLYTEXT.OBJ	&
		POLYTEXZ.OBJ	POLYTZF.OBJ	POLYTZG.OBJ	POLY_HDR.OBJ	&
		POLY_JMP.OBJ	TESTVUE.OBJ	TESTVUEF.OBJ	TESTVUEI.OBJ	&
		TESTVUEM.OBJ

!ifeq BT NT
CFLAGS	= /D_WIN32 /fh=NT.PCH
AFLAGS	= /D_WIN32
LIB     = NT_POLY
OBJETS2 =
!else
CFLAGS	= /D_DOS4GW /fh=DOS.PCH
AFLAGS	= /D_DOS4GW
LIB     = DOS_POLY
OBJETS2 =
!endif

CFLAGS += /5r /d3 /otexan /s /WX /mf /hd /DLIB_LOCAL /bt=$(BT) /v
LFLAGS  = /c /b /l
AFLAGS += /DREG_CALL /nologo /Cx /c /WX /Zd /omf /Fl /Fd

#.SILENT

$(LIB).LIB: $(OBJETS1) $(OBJETS2)
	*$(WL) $(LFLAGS) $(LIB) $?

.cpp.obj:
	$(CPP) $* $(CFLAGS)

.c.obj:
	$(CC) $* $(CFLAGS)

.asm.obj:
	$(ASM) $(AFLAGS) $*.ASM
