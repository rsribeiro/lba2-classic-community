# name the compiler
CPP = wpp386
CC = wcc386
WL = wlib
ASM = ml

OBJETS=	AFF_OBJ.OBJ


!ifeq BT NT
DEF	= _WIN32
LIB     = NT_OBJ
!else
DEF	= _DOS4GW
LIB     = DOS_OBJ
!endif

CFLAGS = /6s /d3 /oneatxz /s /wx /mf /hd /DLIB_LOCAL /bt=$(BT) /zp8 /v
LFLAGS = /c /b /l
AFLAGS = /DSTACK_CALL /nologo /Cx /Zi /c /WX /Sa /D$(DEF) /Zd /Cp /omf

#.SILENT

$(LIB).LIB: $(OBJETS)
	*$(WL) $(LFLAGS) $(LIB) $?

.c.obj:
	$(CC) $* $(CFLAGS)

.asm.obj:
	$(ASM) $(AFLAGS) $*.ASM
